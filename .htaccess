# Configuraci贸n de Apache para el sistema
RewriteEngine On

# Redirigir a HTTPS en producci贸n (comentado para desarrollo local)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevenir acceso a archivos sensibles
<FilesMatch "\.(sql|txt|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger directorios
Options -Indexes

# Configuraci贸n de errores personalizados
ErrorDocument 404 /404.php
ErrorDocument 403 /403.php

# Configuraci贸n de PHP
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value max_input_time 300
